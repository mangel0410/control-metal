</nav>
    <h1 align="center" >CONTROL DEL PIEZA METAL</h1>
    <div class="container">
      <form class="row g-3 needs-validation" action="/nuevo" method="post" onsubmit="this.submit(); this.reset(); return false;">
        <div class="col-md-4">
          <input type="text" name="responsable" value="<%= usuar.area %> / <%=usuar.user_nombre%>" hidden>
          <label for="validationCustom01" class="form-label">REFERENCIA</label>
          <input type="text" class="form-control" name="referen" required>
        </div>
        <div class="col-md-3">
          <label for="validationCustom02" class="form-label">FACTURA/LOTE</label>
          <input type="text" class="form-control" name="lote1" required>
        </div>
        <div class="col-md-3">
          <label for="validationCustom02" class="form-label">PIEZA</label>
          <input type="text" class="form-control" name="pieza1" required>
        </div>
        <div class="col-md-3">
          <label for="validationCustomUsername" class="form-label">MODELO</label>
          <input type="text" class="form-control" name="modelo" required>
          </div>
        <div class="col-md-3">
          <label for="validationCustom05" class="form-label">CANTIDAD</label>
          <input type="number" class="form-control" name="cantidad" required>
        </div>
        <div class="col-md-6">
          <label for="validationCustom03" class="form-label">COMENTARIO</label>
          <input type="text" class="form-control" name="comentarios" >
        </div>
        <div class="col-12">
          <input class="btn btn-primary" type="submit" value="enviar">
        </div>
      </form>
  </div>
  <div class="tab" >
   <div class="col-md-6 mt-4 text-center" >
        <table class="table table-bordered table-striped text-center ">
          <thead>
              <tr class="bg-primary" >
                  <th scope="col">#ID</th>
                  <th scope="col">FECHA</th>
                  <th scope="col">REFERENCIA</th>
                  <th scope="col">FACTURA/LOTE</th>
                  <th scope="col">NOMBRE DE LA PIEZA</ht>
                  <th scope="col">MODELO</th>
                  <th scope="col">RESPONSABLE ENTREGA</th>
                  <th scope="col">CANTIDAD ENTREGADA</th>
                  <th scope="col">RESPONSABLE RECIBIDO LOGÍSTICA</th>
                  <th scope="col">CANTIDAD RECIBIDO LOGÍSTICA</th>
                  <th scope="col">COMENTARIO</th>
                  <th scope="col">OPCIONES</th>
              </tr>
              <tbody id="tbody" >
                <% datos.forEach(function(user){ %>
                <tr>
                  <td><%= user.id %></td>
                  <td><%= user.fecha %></td>
                  <td><%= user.referencia %></td>
                  <td><%= user.lote %></td>
                  <td><%= user.pieza %></td>
                  <td><%= user.modelo %></td>
                  <td><%= user.responsable_desem %></td>
                  <td><%= user.cantidad_entre_desem %></td>
                  <td><%= user.recibe_logis %></td>                    
                  <td><%= user.cantidad_recibi_logis%></td>                    
                  <td><%= user.comentarios %></td> 
                  <td><a href="/editdesem/<%= user.id %>" class="btn btn-primary">EDITAR</a></td>                  
                </tr>
              <% }); %>
              </tbody>
          </thead>
      </table>
    </div>
  </div>
</body>
</html>